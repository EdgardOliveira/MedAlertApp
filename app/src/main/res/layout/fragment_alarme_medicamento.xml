<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.alarme.AlarmeMedicamentoFragment">

    <TextView
        android:id="@+id/tvAlarmeMensagem"
        android:layout_width="350dp"
        android:layout_height="0dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="64dp"
        android:singleLine="false"
        android:text="EstÃ¡ na hora de ingerir o medicamento XXXXXX"
        android:textAlignment="center"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnAlarmeReprogramar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Re-programar"
        app:layout_constraintStart_toStartOf="@+id/tvAlarmeMensagem"
        app:layout_constraintTop_toBottomOf="@+id/tvAlarmeMensagem" />

    <Button
        android:id="@+id/btnAlarmeLiberar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Liberar"
        app:layout_constraintEnd_toEndOf="@+id/tvAlarmeMensagem"
        app:layout_constraintTop_toTopOf="@+id/btnAlarmeReprogramar" />

</androidx.constraintlayout.widget.ConstraintLayout>